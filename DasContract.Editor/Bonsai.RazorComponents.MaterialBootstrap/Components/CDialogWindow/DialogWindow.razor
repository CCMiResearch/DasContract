@inherits RootComponent
@inject IMaterialBootstrapLanguageDictionary LanguageDictionary

<div class="modal fade" tabindex="-1" id="@Id">

    <div class="modal-backdrop fade show blazor-modal-backdrop" @onclick="@( async () => { await CloseAsync(); })"></div>
    <div class="modal-dialog @(DialogWindowSizeHelper.ToClass(Size))">
        <div class="modal-content">
            <div class="modal-header">
                @if (Title != "")
                {
                    <h5 class="modal-title">@Title</h5>
                }
                @Header
                <button type="button" class="close" aria-label="Close" @onclick="@( async () => { await CloseAsync(); })">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @Body
            </div>
            <div class="modal-footer">
                @if (ShowCloseButton)
                {
                <ButtonInput Scheme="ButtonInputScheme.Secondary" OnClick="@(async () => { await CloseAsync(); })">
                    @LanguageDictionary.GetContent(MaterialBootstrapLanguageDictionary.DialogWindowCloseButton)
                </ButtonInput>
                }

                @Footer
            </div>
        </div>
    </div>
</div>
