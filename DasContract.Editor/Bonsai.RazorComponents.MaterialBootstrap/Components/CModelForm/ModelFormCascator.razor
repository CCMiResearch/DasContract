@code {
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public bool ReadOnly { get; set; } = false;

    [Parameter]
    public bool Loading { get; set; } = false;
}



<EditContextCascator>
    <CascadingValue Value="@ReadOnly" Name="ReadOnly">
        <CascadingValue Value="@Loading" Name="Loading">
            @ChildContent
        </CascadingValue>
    </CascadingValue>
</EditContextCascator>

