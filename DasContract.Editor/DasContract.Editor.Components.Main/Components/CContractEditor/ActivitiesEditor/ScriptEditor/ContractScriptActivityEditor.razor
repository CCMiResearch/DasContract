@inherits LoadableComponent

<div class="contractScriptActivityEditor">
    <LoadingScreenAnimation Fullscreen="@Loading" />

    @if (ScriptActivity.Script.Length == 0)
    {
        <Alert Scheme="AlertScheme.Warning">We recommend you to write at least something...</Alert>
    }
    <TextValueInput PropertyExpression="@(() => ScriptActivity.Script)"
                    @bind-Value="ScriptActivity.Script"
                    Type="TextValueInputType.Textarea" />
</div>